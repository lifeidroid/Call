<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_aty_main_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_aty_main_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/rg_aty_main_switch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_aty_main_call"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/call_select"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_aty_main_records"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/contact_select"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb_aty_main_message"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/message_select"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb_aty_main_friend"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/friends_select"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb_aty_main_main"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/main_select"
                android:button="@null" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>