<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_aty_main_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/white"
          android:id="@+id/lay_aty_main_bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lay_atymain_call"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_atymain_call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_call_press" />

            <TextView
                android:id="@+id/tv_atymain_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拨号"
                android:textColor="@color/bule"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_atymain_contact"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_atymain_contact"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_contact" />

            <TextView
                android:id="@+id/tv_atymain_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通话记录"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_atymain_msg"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_atymain_msg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_msg" />

            <TextView
                android:id="@+id/tv_atymain_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_atymain_friends"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_atymain_friends"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_friends" />

            <TextView
                android:id="@+id/tv_atymain_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_atymain_setting"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_atymain_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_setting" />

            <TextView
                android:id="@+id/tv_atymain_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>