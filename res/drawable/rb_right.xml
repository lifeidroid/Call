<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="@color/press_bule" />

            <corners android:bottomRightRadius="15dip" android:topRightRadius="15dip" />

        </shape></item>
    <item android:state_checked="false"><shape android:shape="rectangle">
            <solid android:color="@color/no_press_bule" />

            <corners android:bottomRightRadius="15dip" android:topRightRadius="15dip" />

            <stroke android:width="0.3dip" android:color="@color/press_bule" />
        </shape></item>

</selector>